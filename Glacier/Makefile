  OBJDIR = ../bin-int/Debug-linux-x86_64/Glacier
  DEFINES +=
  INCLUDES += -Isrc -I../Snow/src -I../Snow/vendor/spdlog/include -I../Snow/vendor/GLFW/include
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -std=c++17
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../bin/Debug-linux-x86_64/Snow/libSnow.a ../Snow/vendor/GLFW/bin/Debug-linux-x86_64/GLFW/libGLFW.a ../Snow/vendor/Glad/bin/Debug-linux-x86_64/Glad/libGlad.a -lvulkan -lX11 -lXi -lxcb -lpthread -ldl
  LDDEPS += ../bin/Debug-linux-x86_64/Snow/libSnow.a ../Snow/vendor/GLFW/bin/Debug-linux-x86_64/GLFW/libGLFW.a ../Snow/vendor/Glad/bin/Debug-linux-x86_64/Glad/libGlad.a
  ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64 -s
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
